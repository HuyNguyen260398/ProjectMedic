@model ProjectMedic.Models.PatientLogin

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Layout/_CustomerLayout1.cshtml";
}

<section class="home-slider inner-page owl-carousel" id="contact-banner">
    <div class="slider-item" style="background-image: url('../../Template/Medic/img/slider-2.jpg')">
        <div class="container">
            <div class="row slider-text align-items-center">
                <div class="col-md-7 col-sm-12 element-animate">
                    <h1>Sign In</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi unde impedit, necessitatibus, soluta sit quam minima expedita atque corrupti reiciendis.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-5 element-animate">
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(model => model.Patient_Username, htmlAttributes: new { @for = "username" })
                                @Html.EditorFor(model => model.Patient_Username, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "username" } })
                                @Html.ValidationMessageFor(model => model.Patient_Username, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("UsernameError", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(model => model.Patient_Password, htmlAttributes: new { @for = "password" })
                                @Html.EditorFor(model => model.Patient_Password, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "password" } })
                                @Html.ValidationMessageFor(model => model.Patient_Password, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("PasswordError", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group form-inline">
                                @Html.EditorFor(model => model.RememberMe)
                                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @for = "rememberme" })
                                @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Sign In" class="btn btn-success btn-lg btn-block">
                            </div>
                            <div class="col-md-6 form-group">
                                <a href=@Url.Action("Registration", "Patient") class="btn btn-primary btn-lg btn-block">Register</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-5 element-animate">

                    <h5 class="text-uppercase mb-3">Address</h5>
                    <p class="mb-5">609-611 Au Co Street,<br>Phu Trung Ward, Tan Phu Distric,<br>HCM City</p>

                    <h5 class="text-uppercase mb-3">Website</h5>
                    <p class="mb-5">
                        <a href="http://benhvientanphu.vn">tanphuhospital.vn</a>

                        <h5 class="text-uppercase mb-3">Contact</h5>
                    <p class="mb-5">Phone: 38 65 79 48 - 54 088 924 <br> Support: 54 088 928 <br> Hotline: 0966 37 10 10</p>

                </div>
            </div>
        </div>
    </section>
}

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}