@model ProjectMedic.Models.Patient

@{
    ViewBag.Title = "AccountSetting";
    Layout = "~/Views/Layout/_CustomerLayout1.cshtml";
}

<section class="home-slider inner-page owl-carousel" id="contact-banner">
    <div class="slider-item" style="background-image: url('../../Template/Medic/img/slider-2.jpg')">
        <div class="container">
            <div class="row slider-text align-items-center">
                <div class="col-md-7 col-sm-12 element-animate">
                    <h1>My Account</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi unde impedit, necessitatibus, soluta sit quam minima expedita atque corrupti reiciendis.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section bg-light custom-tabs">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 border-right element-animate" data-animate-effect="fadeInLeft">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true"><span class="fas fa-user">&nbsp;&nbsp;My Account</span></a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false"><span class="fas fa-user-edit">&nbsp;&nbsp;Update Info</span></a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false"><span class="fas fa-user-shield">&nbsp;&nbsp;Change Password</span></a>
                </div>
            </div>
            <div class="col-md-9 element-animate" data-animate-effect="fadeInLeft">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">

                        <table class="table">
                            <tr style="border-bottom:hidden; border-top: hidden">
                                <td>
                                    <span class="fas fa-user">&nbsp;&nbsp;</span>Full Name:
                                </td>
                                <td>@String.Concat(Model.Patient_Firstname, " ", Model.Patient_Lastname)</td>
                                <td>
                                    <span class="fas fa-venus-mars">&nbsp;&nbsp;</span>Gender:
                                </td>
                                <td>@Model.Patient_Gender</td>
                            </tr>
                            <tr style="border-bottom:hidden">
                                <td>
                                    <span class="far fa-calendar-alt">&nbsp;&nbsp;</span>Date of Birth:
                                </td>
                                <td>@Convert.ToDateTime(Model.Patient_DoB).ToShortDateString()</td>
                                <td>
                                    <span class="fas fa-id-card">&nbsp;&nbsp;</span>ID Card Number:
                                </td>
                                <td>@Model.Patient_IDCardNumber</td>
                            </tr>
                            <tr style="border-bottom:hidden">
                                <td>
                                    <span class="fas fa-globe">&nbsp;&nbsp;</span>Nationality:
                                </td>
                                <td>@Model.Patient_Nationality</td>
                                <td>
                                    <span class="fas fa-users">&nbsp;&nbsp;</span>Ethnic:
                                </td>
                                <td>@Model.Patient_Ethnic</td>
                            </tr>
                            <tr style="border-bottom:hidden">
                                <td>
                                    <span class="fas fa-mobile-alt">&nbsp;&nbsp;</span>Phone Number:
                                </td>
                                <td>@Model.Patient_Phone</td>
                                <td>
                                    <span class="fas fa-envelope">&nbsp;&nbsp;</span>Email:
                                </td>
                                <td>@Model.Patient_Email</td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="fas fa-map-marked-alt">&nbsp;&nbsp;</span>Address:
                                </td>
                                <td>@Model.Patient_Address</td>
                                <td>
                                    <span class="fas fa-briefcase">&nbsp;&nbsp;</span>Occupation:
                                </td>
                                <td>@Model.Patient_Occupation</td>
                            </tr>
                        </table>

                    </div>

                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">

                        @using (Html.BeginForm("EditAccount", "Patient", FormMethod.Post))
                        {

                            <table class="table">
                                <tr style="border-bottom:hidden; border-top:hidden">
                                    @Html.HiddenFor(model => model.Patient_Password, new { Value = Session["P_Pass"] })
                                    @Html.HiddenFor(model => model.ConfirmPassword, new { Value = Session["P_Pass"] })
                                    @Html.HiddenFor(model => model.Patient_Username, new { Value = Session["P_Username"] })
                                </tr>
                                <tr style="border-bottom:hidden">
                                    <td>
                                        <span class="fas fa-user">&nbsp;&nbsp;</span>First Name:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Firstname, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                    <td>
                                        <span class="fas fa-user">&nbsp;&nbsp;</span>Last Name:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Lastname, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                </tr>
                                <tr style="border-bottom:hidden">
                                    <td>
                                        <span class="fas fa-venus-mars">&nbsp;&nbsp;</span>Gender:
                                    </td>
                                    <td>
                                        @Html.DropDownList("gender", (IEnumerable<SelectListItem>)ViewBag.Gender, htmlAttributes: new { @class = "form-control form-control-md" })
                                    </td>
                                    <td>
                                        <span class="far fa-calendar-alt">&nbsp;&nbsp;</span>Date of Birth:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_DoB, new { htmlAttributes = new { @class = "form-control form-control-md", @type = "date" } })
                                    </td>
                                </tr>
                                <tr style="border-bottom:hidden">
                                    <td>
                                        <span class="fas fa-id-card">&nbsp;&nbsp;</span>ID Card Number:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_IDCardNumber, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                    <td>
                                        <span class="fas fa-briefcase">&nbsp;&nbsp;</span>Occupation:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Occupation, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                </tr>
                                <tr style="border-bottom:hidden">
                                    <td>
                                        <span class="fas fa-globe">&nbsp;&nbsp;</span>Nationality:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Nationality, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                    <td>
                                        <span class="fas fa-users">&nbsp;&nbsp;</span>Ethnic:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Ethnic, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                </tr>
                                <tr style="border-bottom:hidden">
                                    <td>
                                        <span class="fas fa-mobile-alt">&nbsp;&nbsp;</span>Phone Number:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Phone, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                    <td>
                                        <span class="fas fa-envelope">&nbsp;&nbsp;</span>Email:
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Patient_Email, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span class="fas fa-map-marked-alt">&nbsp;&nbsp;</span>Address:
                                    </td>
                                    <td colspan="3">
                                        @Html.EditorFor(model => model.Patient_Address, new { htmlAttributes = new { @class = "form-control form-control-md" } })
                                    </td>

                                </tr>
                            </table>

                            <p><button type="submit" class="btn btn-primary">Update</button></p>

                        }

                    </div>

                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">

                        @Html.Action("ChangePassword","Patient")

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>