@model ProjectMedic.Models.Patient

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Layout/_CustomerLayout1.cshtml";
}

<section class="home-slider inner-page owl-carousel" id="contact-banner">
    <div class="slider-item" style="background-image: url('../../Template/Medic/img/slider-2.jpg')">
        <div class="container">
            <div class="row slider-text align-items-center">
                <div class="col-md-7 col-sm-12 element-animate">
                    <h1>Registration</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi unde impedit, necessitatibus, soluta sit quam minima expedita atque corrupti reiciendis.</p>
                </div>
            </div>
        </div>
    </div>
</section>


@if (ViewBag.Message != null)
{

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-5 element-animate">
                    <div class="text-success">
                        <strong>Success!</strong>@ViewBag.Message
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-5 element-animate">
                </div>
            </div>
        </div>
    </section>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-5 element-animate">
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="fname">First Name</label>
                                @Html.EditorFor(model => model.Patient_Firstname, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "fname" } })
                                @Html.ValidationMessageFor(model => model.Patient_Firstname, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="lname">Last Name</label>
                                @Html.EditorFor(model => model.Patient_Lastname, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "lname" } })
                                @Html.ValidationMessageFor(model => model.Patient_Lastname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="dob">Date of Birth</label>
                                @Html.EditorFor(model => model.Patient_DoB, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "dob" } })
                                @Html.ValidationMessageFor(model => model.Patient_DoB, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="gender">Gender</label>
                                @Html.DropDownList("gender", (IEnumerable<SelectListItem>)ViewBag.Gender, htmlAttributes: new { @class = "form-control form-control-lg", @id = "gender" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="email">Email</label>
                                @Html.EditorFor(model => model.Patient_Email, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "email" } })
                                @Html.ValidationMessageFor(model => model.Patient_Email, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("EmailExist", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="username">Username</label>
                                @Html.EditorFor(model => model.Patient_Username, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "username" } })
                                @Html.ValidationMessageFor(model => model.Patient_Username, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("UsernameExist", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="password">Password</label>
                                @Html.EditorFor(model => model.Patient_Password, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "password" } })
                                @Html.ValidationMessageFor(model => model.Patient_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="re-password">Confirm Password</label>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control form-control-lg", @id = "re-password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Register" class="btn btn-success btn-lg btn-block">
                            </div>
                            <div class="col-md-6 form-group">
                                <a href=@Url.Action("Signin", "Patient") class="btn btn-primary btn-lg btn-block">Sign In</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-5 element-animate">

                    <h5 class="text-uppercase mb-3">Address</h5>
                    <p class="mb-5">609-611 Au Co Street,<br>Phu Trung Ward, Tan Phu Distric,<br>HCM City</p>

                    <h5 class="text-uppercase mb-3">Website</h5>
                    <p class="mb-5">
                        <a href="http://benhvientanphu.vn">tanphuhospital.vn</a>

                        <h5 class="text-uppercase mb-3">Contact</h5>
                    <p class="mb-5">Phone: 38 65 79 48 - 54 088 924 <br> Support: 54 088 928 <br> Hotline: 0966 37 10 10</p>

                </div>
            </div>
        </div>
    </section>

    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>@ViewBag.Message
        </div>
    }
}


@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

